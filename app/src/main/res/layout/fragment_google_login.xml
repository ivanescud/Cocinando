<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragment.GoogleLogin">

    <Button
        android:id="@+id/googleLoginButton1"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:background="@drawable/roundedbutton_right_disable"
        android:drawableStart="@drawable/googleg_standard_color_18"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:text="@string/sigin_google"
        android:visibility="gone" />

    <Button
        android:id="@+id/googleLoginButton2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/roundedbutton"
        android:drawableStart="@drawable/googleg_standard_color_18"
        android:padding="5dp"
        android:text="@string/google"
        android:visibility="gone" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleLoginButton0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/com_facebook_button_login_background"
        android:visibility="gone" />
</FrameLayout>